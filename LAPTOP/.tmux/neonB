#--------------> neonB


#--------------> Panes
#this defines the color and width of pane separator--comment out to make pane thinner
#active 
set -g  pane-active-border-bg '#008Ed1'
set -g  pane-active-border-fg '#006F95'
#non active
set -g  pane-border-fg default
set -g  pane-border-bg default

# pane number display
#set-option -g display-panes-active-colour colour33 #blue
#set-option -g display-panes-colour colour166 #orange

#--------------> Status-Bar

#base color
set -g status-bg "#DDDDDD"
set -g status-fg "#777777"

# Current or active window in status bar
set-window-option -g window-status-current-attr bold
set-window-option -g window-status-current-fg white
set-window-option -g window-status-current-bg '#0099CC'
 
# Non active window in status bar
set-window-option -g window-status-attr bold
set-window-option -g window-status-fg '#008ED1'
set-window-option -g window-status-bg '#002E41'

# bell colours
set -g window-status-bell-bg default
set -g window-status-bell-fg red
set -g window-status-bell-attr bright

# command/message line colors
set -g message-fg white
set -g message-bg black
set -g message-attr bright

