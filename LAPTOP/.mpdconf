#mpd config file 1.1.2014

music_directory  		"/home/zeltak/music/"
db_file  			"/home/zeltak/.mpd/database"
#log_file 			"syslog"
pid_file 			"/home/zeltak/.mpd/pid"
state_file  			"/home/zeltak/.mpd/state"
playlist_directory  		"/home/zeltak/.mpd/playlists"
#user 				"zeltak"
#bind_to_address "192.168.0.20"  #uncomment if you want to access mpd from other machines
bind_to_address  "0.0.0.0"
bind_to_address  "/home/zeltak/.mpd/socket"
#group                                "nogroup"
port                                  "6600"
log_level                            "default"
gapless_mp3_playback                  "yes"
#restore_paused                       "no"
save_absolute_paths_in_playlists     "no"
metadata_to_use                       "artist,album,title,track,name,genre,date,composer,performer,disc,albumartist,albumartistsort,comment"
auto_update                           "yes"
#auto_update_depth                    "3"
#follow_outside_symlinks              "yes"
#follow_inside_symlinks               "yes"
#zeroconf_enabled                     "yes"
#zeroconf_name                        "Music Player"

sticker_file       "/home/zeltak/.mpd/sticker.sql"

#password                             "password@read,add,control,admin"
#default_permissions                  "read,add,control,admin"


